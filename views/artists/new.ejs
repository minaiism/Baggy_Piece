<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <h1 style="text-align: center;">Create a New Artist</h1>
      <div style="width:30%; margin: 25px auto;">
        <form action="/artists" method="POST">
          <div class="form-group" style="font-family: Georgia; font-size:20px;">
            <input class="form-control" type="text" name="name" placeholder="Name">
          </div>
          <div class="form-group" style="font-family: Georgia; font-size:20px;">
            <input class="form-control" type="text" name="image" placeholder="Image url">
          </div>
          <div class="form-group" style="font-family: Georgia; font-size:20px;">
            <textarea class="bubble" class="form-control" type="text" name="description" placeholder="Description"></textarea>
          </div>
          <div class="form-group" style="font-family: Georgia; font-size:20px;">
            <input class="form-control" type="text" name="youtube" placeholder="YouTube">
          </div>
          <div class="form-group" style="font-family: Georgia; font-size:20px;">
            <input class="form-control" type="text" name="spotify" placeholder="Spotify">
          </div>
          <div class="form-group" style="font-family: Georgia; font-size:20px;">
            <input class="form-control" type="text" name="facebook" placeholder="Facebook">
          </div>
          <div class="form-group" style="font-family: Georgia; font-size:20px;">
            <input class="form-control" type="text" name="twitter" placeholder="Twitter">
          </div>
          <div class="form-group" style="font-family: Georgia; font-size:20px;">
            <input class="form-control" type="text" name="instagram" placeholder="Instagram">
          </div>
          <div class="form-group" style="font-family: Georgia; font-size:20px;">
            <input class="form-control" type="text" name="pinterest" placeholder="Pinterest">
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
        </form>
        <a href="/artists">Go Back!</a>
      </div>
    </div>
  </div>

  <% include ../partials/footer %>