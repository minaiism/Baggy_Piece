<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <p class="lead">BaggyPiece</p>
        <div class="list-group">
          <li class="list-group-item active">About</li>
          <li class="list-group-item active">Music</li>
          <li class="list-group-item active">Concerts</li>
        </div>
      </div>
      <div class="col-md-9">
        <div class="thumbnail">
          <img class="img-responsive" src="<%= artist.image %>">
          <div class="caption-full">
            <h4 class="pull-right">10/10</h4>
            <h4><a><%= artist.name %></a></h4>
            <p>
              <%=artist.description %>
            </p>
          </div>
        </div>
        <div class="text-right">
          <a class="btn btn-success" href="/artists/<%=artist._id %>/comments/new">Add New Comment</a>
        </div>
        <hr>
        <% artist.comments.forEach(function(comment){ %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author %></strong>
              <span class="pull-right">10 days ago</span>
              <%= comment.text %>
                </p>
            </div>
          </div>
          <%  }); %>
      </div>
    </div>
  </div>
  </div>

  <% include ../partials/footer %>