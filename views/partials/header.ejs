<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>BaggyPiece</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/stylesheet/main.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Bowlby+One+SC|Fontdiner+Swanky|Fredericka+the+Great|Jacques+Francois+Shadow|Press+Start+2P|Sigmar+One|Syncopate|Marcellus+SC|Happy+Monkey" rel="stylesheet">
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>

        <a class="navbar-brand" style="color:white;" href="/">BaggyPiece <span class="glyphicon glyphicon-fire" ></span></a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="<%= typeof page !== 'undefined' && page === 'artists' ? 'active' : '' %>"><a href="/artists"><span class="glyphicon glyphicon-home" ></span>  Home</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if(!currentUser){ %>
            <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login"><span class="glyphicon glyphicon-log-in" ></span>    Login</a></li>
            <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register"><span class="glyphicon glyphicon-globe" ></span> Sign Up</a></li>
            <% } else { %>
              <li><a href="#"><span class="glyphicon glyphicon-user" ></span>  Signed In As <%= currentUser.username %></a></li>
              <li><a href="/logout"><span class="glyphicon glyphicon-log-out" ></span>   Logout</a></li>
              <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <% if(error && error.length > 0) { %>
      <div class="alert alert-danger">
        <p>
          <%=error %>
        </p>
      </div>
      <% } %>

        <% if(success && success.length > 0) { %>
          <div class="alert alert-success">
            <p>
              <%= success %>
            </p>
          </div>
          <% } %>
  </div>
  <div class="container">